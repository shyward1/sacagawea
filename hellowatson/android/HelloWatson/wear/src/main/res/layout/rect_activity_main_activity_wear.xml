<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context=".MainActivityWear" tools:deviceIds="wear_square">

    <TextView android:id="@+id/text" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="@string/app_name_square"
        android:layout_centerHorizontal="true"
        android:textColor="@color/dark_grey"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/paris"
        android:layout_below="@id/text"
        android:id="@+id/frenchIcon"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/translateFrenchButton"
        android:layout_toRightOf="@id/frenchIcon"
        android:layout_below="@id/text"
        android:text="Translate to French"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/barcelona"
        android:layout_below="@id/frenchIcon"
        android:id="@+id/spanishIcon"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/translateSpanishButton"
        android:layout_below="@id/translateFrenchButton"
        android:layout_toRightOf="@id/spanishIcon"
        android:text="Translate to Spanish"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/question"
        android:layout_below="@id/spanishIcon"
        android:id="@+id/questionIcon"/>

    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:id="@+id/questionButton"
        android:layout_below="@id/translateSpanishButton"
        android:layout_toRightOf="@id/questionIcon"
        android:text="Question"/>

</RelativeLayout>
